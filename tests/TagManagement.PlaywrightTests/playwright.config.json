{
  "timeout": 30000,
  "expect": {
    "timeout": 5000
  },
  "fullyParallel": true,
  "forbidOnly": true,
  "retries": 2,
  "workers": 1,
  "reporter": [
    ["html", { "outputFolder": "playwright-report" }],
    ["junit", { "outputFile": "test-results/results.xml" }]
  ],
  "use": {
    "baseURL": "https://localhost:7001",
    "trace": "on-first-retry",
    "screenshot": "only-on-failure",
    "video": "retain-on-failure",
    "headless": true
  },
  "projects": [
    {
      "name": "chromium",
      "use": {
        "channel": "msedge"
      }
    }
  ],
  "outputDir": "test-results/",
  "webServer": {
    "command": "dotnet run --project ../../src/TagManagement.Api/TagManagement.Api.csproj",
    "port": 7001,
    "reuseExistingServer": true
  }
}
